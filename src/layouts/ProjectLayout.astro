---
import Layout from './Layout.astro';
import ProjectDetail from '../components/ProjectDetail.astro';

interface Badge {
  src: string;
  alt: string;
  href?: string;
}

interface Props {
  pageTitle: string;
  description: string;
  title: string;
  sketchId?: string;
  tagline: string;
  tags: string[];
  repo?: string;
  liveUrl?: string;
  badges?: Badge[];
  heroImage?: { src: string; alt: string };
  keywords?: string[];
}

const { pageTitle, description, title, tags, repo, liveUrl, keywords, ...projectProps } = Astro.props;
---

<Layout title={pageTitle} description={description} keywords={keywords} schemaProject={{ name: title, description, tags, repo, liveUrl }}>
  <ProjectDetail title={title} tags={tags} repo={repo} liveUrl={liveUrl} {...projectProps}>
    <slot />
  </ProjectDetail>
</Layout>
