---
// Back-to-top button: appears after scrolling past the header.
// Uses IntersectionObserver on a sentinel element.
---

<div class="btt-sentinel" aria-hidden="true"></div>
<button class="btt" aria-label="Back to top" type="button" hidden>
  <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M9 14V4"/>
    <path d="M4 8l5-5 5 5"/>
  </svg>
</button>

<script>
  function initBackToTop() {
    const btn = document.querySelector('.btt') as HTMLButtonElement | null;
    const sentinel = document.querySelector('.btt-sentinel') as HTMLElement | null;
    if (!btn || !sentinel) return;

    const observer = new IntersectionObserver(([entry]) => {
      btn.hidden = entry.isIntersecting;
    }, { threshold: 0 });

    observer.observe(sentinel);

    btn.addEventListener('click', () => {
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      window.scrollTo({ top: 0, behavior: prefersReduced ? 'instant' : 'smooth' });
    });

    document.addEventListener('astro:before-swap', () => observer.disconnect(), { once: true });
  }

  document.addEventListener('astro:page-load', initBackToTop);
</script>

<style>
  .btt-sentinel {
    position: absolute;
    top: 200px;
    height: 1px;
    width: 1px;
    pointer-events: none;
  }

  .btt {
    position: fixed;
    bottom: var(--space-xl);
    right: var(--space-xl);
    z-index: 50;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--border);
    background: var(--bg-card);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: var(--text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease, border-color var(--transition-fast), color var(--transition-fast);
    opacity: 0.8;
  }

  .btt:hover {
    border-color: var(--accent);
    color: var(--accent-text);
    opacity: 1;
  }

  .btt[hidden] {
    display: none;
  }
</style>
