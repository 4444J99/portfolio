---
interface Props {
  chartId: string;
  data?: unknown;
  ariaLabel: string;
  height?: string;
  title?: string;
  caption?: string;
  dataSource?: string;
}

const { 
  chartId, 
  data, 
  ariaLabel, 
  height = '300px',
  title,
  caption,
  dataSource
} = Astro.props;
---

<figure class="chart-wrapper">
  {title && <h3 class="chart-title">{title}</h3>}
  <div class="chart-container" data-chart={chartId} role="img" aria-label={ariaLabel} tabindex="0" style={`min-height: ${height}; position: relative;`}>
    {data && (
      <script is:inline type="application/json" set:html={JSON.stringify(data)} />
    )}
    <noscript>
      <p class="chart-fallback">{ariaLabel}</p>
    </noscript>
  </div>
  {(caption || dataSource) && (
    <figcaption class="chart-caption">
      {caption && <span>{caption}</span>}
      {dataSource && <span class="chart-source">Source: {dataSource}</span>}
    </figcaption>
  )}
</figure>

<style>
  .chart-wrapper {
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .chart-title {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.9;
  }

  .chart-container {
    width: 100%;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: var(--space-lg);
    overflow: hidden;
  }

  .chart-caption {
    font-size: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.5;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    opacity: 0.8;
  }

  .chart-source {
    font-family: var(--font-mono);
    opacity: 0.8;
    white-space: nowrap;
  }

  .chart-container :global(svg) {
    display: block;
    width: 100%;
    height: auto;
  }

  .chart-fallback {
    padding: var(--space-xl);
    color: var(--text-muted);
    font-style: italic;
    text-align: center;
  }
</style>
