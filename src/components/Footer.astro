---
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__links">
      <a href="https://github.com/meta-organvm" target="_blank" rel="me noopener noreferrer">GitHub</a>
      <span class="footer__sep" aria-hidden="true">/</span>
      <a href="https://www.linkedin.com/in/anthony-james-padavano-98a40a186/" target="_blank" rel="me noopener noreferrer">LinkedIn</a>
      <span class="footer__sep" aria-hidden="true">/</span>
      <a href="mailto:padavano.anthony@gmail.com">Contact</a>
    </div>
    <div class="footer__right">
      <button class="theme-toggle" aria-label="Toggle light/dark theme" title="Toggle theme">
        <svg class="theme-icon theme-icon--sun" width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="9" cy="9" r="4"/>
          <path d="M9 1v2M9 15v2M1 9h2M15 9h2M3.3 3.3l1.4 1.4M13.3 13.3l1.4 1.4M3.3 14.7l1.4-1.4M13.3 4.7l1.4-1.4"/>
        </svg>
        <svg class="theme-icon theme-icon--moon" width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M15.1 9.9A6 6 0 1 1 8.1 2.9a7 7 0 0 0 7 7z"/>
        </svg>
      </button>
      <p class="footer__copy">
        &copy; {year} Anthony James Padavano · Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a>
      </p>
      <div class="footer__build">
        <span class="build-dot" aria-hidden="true"></span>
        <span class="build-text">Deployed: {new Date().toLocaleDateString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })}</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--border);
    padding: var(--space-2xl) 0;
    margin-top: var(--space-4xl);
    background: var(--bg-chrome);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .footer__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer__links {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .footer__links a {
    font-size: 0.85rem;
    color: var(--text-muted);
    transition: color var(--transition-fast);
  }

  .footer__links a:hover {
    color: var(--text-primary);
  }

  .footer__sep {
    color: var(--border);
    font-size: 0.8rem;
  }

  .footer__right {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .footer__copy {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .footer__build {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
    background: var(--bg-card);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    border: 1px solid var(--border);
  }

  .build-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #4CAF50;
    box-shadow: 0 0 6px #4CAF50;
  }

  .theme-toggle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid var(--border);
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
  }

  .theme-toggle:hover {
    border-color: var(--text-primary);
    color: var(--text-primary);
  }

  /* Show sun in dark mode, moon in light mode */
  .theme-icon--moon { display: none; }
  :global(html[data-theme="light"]) .theme-icon--sun { display: none; }
  :global(html[data-theme="light"]) .theme-icon--moon { display: block; }

  @media (max-width: 768px) {
    .footer__inner {
      flex-direction: column;
      align-items: center;
      gap: var(--space-md);
      text-align: center;
    }

    .footer__links {
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer__right {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }
</style>

<script>
  type ThemePreference = 'system' | 'light' | 'dark';

  interface ThemeToggleState {
    controller?: AbortController;
    mediaQuery?: MediaQueryList;
    mediaListener?: () => void;
  }

  interface ThemeStorageFallbackState {
    preference: ThemePreference;
  }

  function getThemeToggleState(): ThemeToggleState {
    const w = window as Window & { __themeToggleState?: ThemeToggleState };
    if (!w.__themeToggleState) w.__themeToggleState = {};
    return w.__themeToggleState;
  }

  function getThemeStorageFallbackState(): ThemeStorageFallbackState {
    const w = window as Window & { __themeStorageFallback?: ThemeStorageFallbackState };
    if (!w.__themeStorageFallback) {
      w.__themeStorageFallback = { preference: 'system' };
    }
    return w.__themeStorageFallback;
  }

  function readStorageItem(key: string): string | null {
    try {
      return window.localStorage.getItem(key);
    } catch {
      return null;
    }
  }

  function writeStorageItem(key: string, value: string): boolean {
    try {
      window.localStorage.setItem(key, value);
      return true;
    } catch {
      return false;
    }
  }

  function removeStorageItem(key: string): boolean {
    try {
      window.localStorage.removeItem(key);
      return true;
    } catch {
      return false;
    }
  }

  function readThemePreference(): ThemePreference {
    const stored = readStorageItem('theme-preference');
    if (stored === 'system' || stored === 'light' || stored === 'dark') {
      getThemeStorageFallbackState().preference = stored;
      return stored;
    }
    return getThemeStorageFallbackState().preference;
  }

  function writeThemePreference(next: ThemePreference) {
    getThemeStorageFallbackState().preference = next;
    writeStorageItem('theme-preference', next);
  }

  function applyTheme(theme: string) {
    document.documentElement.dataset.theme = theme;
    const meta = document.querySelector('meta[name="theme-color"]') as HTMLMetaElement | null;
    if (meta) meta.content = theme === 'light' ? '#f5f5f0' : '#0a0a0b';
  }

  function resolveSystemTheme(): string {
    return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
  }

  function initThemeToggle() {
    const state = getThemeToggleState();
    state.controller?.abort();
    const controller = new AbortController();
    const { signal } = controller;
    state.controller = controller;

    const btns = document.querySelectorAll<HTMLButtonElement>('.theme-toggle');
    if (!btns.length) return;

    function updateToggleLabel() {
      const pref = readThemePreference();
      const label = pref === 'system' ? 'Theme: System (click for Light)'
        : pref === 'light' ? 'Theme: Light (click for Dark)'
        : 'Theme: Dark (click for System)';
      document.querySelectorAll('.theme-toggle').forEach(b => b.setAttribute('aria-label', label));
    }

    // Three-state cycle: system → light → dark → system
    btns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const pref = readThemePreference();
        let next: ThemePreference;
        if (pref === 'system') next = 'light';
        else if (pref === 'light') next = 'dark';
        else next = 'system';

        writeThemePreference(next);
        if (next === 'system') {
          removeStorageItem('theme');
          applyTheme(resolveSystemTheme());
        } else {
          writeStorageItem('theme', next);
          applyTheme(next);
        }
        updateToggleLabel();
      }, { signal });
    });

    updateToggleLabel();

    // Listen once for system preference changes (only applies in 'system' mode)
    if (!state.mediaListener) {
      state.mediaQuery = window.matchMedia('(prefers-color-scheme: light)');
      state.mediaListener = () => {
        const pref = readThemePreference();
        if (pref === 'system') {
          applyTheme(resolveSystemTheme());
        }
      };
      state.mediaQuery.addEventListener('change', state.mediaListener);
    }

    document.addEventListener('astro:before-swap', () => {
      controller.abort();
    }, { once: true, signal });
  }

  document.addEventListener('astro:page-load', initThemeToggle);
</script>
