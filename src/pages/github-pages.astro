---
import Layout from '../layouts/Layout.astro';
import pagesDirectory from '../data/github-pages.json';

interface PagesRepo {
  owner: string;
  repo: string;
  fullName: string;
  repoUrl: string;
  pageUrl: string;
  status: string | null;
  buildType: string | null;
  cname: string | null;
  sourceBranch: string | null;
  sourcePath: string | null;
  updatedAt: string | null;
}

interface PagesDirectory {
  generatedAt: string;
  owners: string[];
  totalRepos: number;
  repos: PagesRepo[];
}

const directory = pagesDirectory as PagesDirectory;
const ownerOrder = new Map(
  directory.owners.map((owner, index) => [owner.toLowerCase(), index])
);

const grouped = new Map<string, PagesRepo[]>();
for (const repo of directory.repos) {
  if (!grouped.has(repo.owner)) grouped.set(repo.owner, []);
  grouped.get(repo.owner)?.push(repo);
}

const groups = Array.from(grouped.entries()).sort((a, b) => {
  const aIdx = ownerOrder.get(a[0].toLowerCase());
  const bIdx = ownerOrder.get(b[0].toLowerCase());
  if (aIdx !== undefined && bIdx !== undefined) return aIdx - bIdx;
  if (aIdx !== undefined) return -1;
  if (bIdx !== undefined) return 1;
  return a[0].localeCompare(b[0], undefined, { sensitivity: 'base' });
});

const generatedLabel = Number.isFinite(Date.parse(directory.generatedAt))
  ? new Date(directory.generatedAt).toLocaleString('en-US', {
      dateStyle: 'medium',
      timeStyle: 'short',
    })
  : directory.generatedAt;
---

<Layout title="GitHub Pages Directory â€” 4444j" description="Directory of GitHub Pages sites across personal and organ organizations.">
  <section class="section">
    <div class="container">
      <h1 class="page-title">GitHub Pages Directory</h1>
      <p class="page-sub">
        A unified index of live GitHub Pages deployments across the personal account and organ organizations.
      </p>

      <div class="summary-grid">
        <div class="summary-card">
          <span class="summary-label">Total Pages Repos</span>
          <strong class="summary-value">{directory.totalRepos}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Owners Indexed</span>
          <strong class="summary-value">{directory.owners.length}</strong>
        </div>
        <div class="summary-card summary-card--wide">
          <span class="summary-label">Last Sync</span>
          <strong class="summary-value summary-value--small">{generatedLabel}</strong>
        </div>
      </div>

      <div class="groups">
        {groups.map(([owner, repos]) => (
          <section class="owner-group" aria-labelledby={`owner-${owner}`}>
            <div class="owner-group__head">
              <h2 id={`owner-${owner}`}>{owner}</h2>
              <span>{repos.length} repo{repos.length !== 1 ? 's' : ''}</span>
            </div>
            <ul class="repo-list">
              {repos.map((repo) => (
                <li class="repo-item">
                  <div class="repo-main">
                    <a class="repo-link" href={repo.pageUrl} target="_blank" rel="noopener noreferrer">
                      {repo.fullName}
                    </a>
                    <a class="repo-secondary" href={repo.repoUrl} target="_blank" rel="noopener noreferrer">
                      View repository
                    </a>
                  </div>
                  <div class="repo-meta">
                    {repo.status && <span class="meta-pill">status: {repo.status}</span>}
                    {repo.buildType && <span class="meta-pill">build: {repo.buildType}</span>}
                    {repo.cname && <span class="meta-pill">cname: {repo.cname}</span>}
                    {repo.sourceBranch && (
                      <span class="meta-pill">
                        source: {repo.sourceBranch}
                        {repo.sourcePath && repo.sourcePath !== '/' ? `:${repo.sourcePath}` : ''}
                      </span>
                    )}
                  </div>
                </li>
              ))}
            </ul>
          </section>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-md);
    margin: var(--space-xl) 0 var(--space-2xl);
  }

  .summary-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .summary-card--wide {
    grid-column: span 1;
  }

  .summary-label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
  }

  .summary-value {
    font-size: 1.5rem;
    color: var(--text-primary);
  }

  .summary-value--small {
    font-size: 1rem;
    line-height: 1.3;
  }

  .groups {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .owner-group {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    background: var(--bg-card);
    overflow: hidden;
  }

  .owner-group__head {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
    background: rgba(var(--spectrum-current, 212, 168, 83), 0.08);
  }

  .owner-group__head h2 {
    margin: 0;
    font-size: 1.05rem;
  }

  .owner-group__head span {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .repo-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .repo-item {
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .repo-item:last-child {
    border-bottom: 0;
  }

  .repo-main {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-md);
  }

  .repo-link {
    font-weight: 600;
    color: var(--text-primary);
  }

  .repo-link:hover {
    color: var(--accent-text);
  }

  .repo-secondary {
    font-size: 0.84rem;
    color: var(--text-muted);
  }

  .repo-secondary:hover {
    color: var(--text-secondary);
  }

  .repo-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-sm);
  }

  .meta-pill {
    display: inline-block;
    font-size: 0.72rem;
    letter-spacing: 0.03em;
    border: 1px solid var(--border);
    border-radius: 999px;
    padding: 0.15rem 0.55rem;
    color: var(--text-muted);
    background: rgba(255, 255, 255, 0.03);
  }

  @media (max-width: 900px) {
    .summary-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
