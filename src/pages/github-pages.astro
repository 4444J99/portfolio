---
import Layout from '../layouts/Layout.astro';
import GithubPagesTracking from '../components/scripts/GithubPagesTracking.astro';
import pagesDirectory from '../data/github-pages.json';
import { base } from '../utils/paths';

interface PagesRepo {
  owner: string;
  repo: string;
  fullName: string;
  repoUrl: string;
  pageUrl: string;
  status: string | null;
  buildType: string | null;
  cname: string | null;
  sourceBranch: string | null;
  sourcePath: string | null;
  updatedAt: string | null;
  featured: boolean;
  priority: number;
  hidden: boolean;
  label: string | null;
  httpStatus: number | null;
  reachable: boolean;
  redirectTarget: string | null;
  lastCheckedAt: string;
  probeMethod?: string | null;
  probeLatencyMs?: number | null;
  lastError?: string | null;
}

interface PagesDirectory {
  generatedAt: string;
  owners: string[];
  totalRepos: number;
  repos: PagesRepo[];
}

const directory = pagesDirectory as PagesDirectory;
const generatedAtMs = Number.isFinite(Date.parse(directory.generatedAt))
  ? Date.parse(directory.generatedAt)
  : null;
const generatedLabel =
  generatedAtMs === null
    ? directory.generatedAt
    : new Date(generatedAtMs).toLocaleString('en-US', {
        dateStyle: 'medium',
        timeStyle: 'short',
      });

const ageHours = generatedAtMs === null ? null : (Date.now() - generatedAtMs) / (1000 * 60 * 60);
const isStale = ageHours !== null && ageHours > 48;

const visibleRepos = directory.repos.filter((repo) => !repo.hidden);

const builtCount = visibleRepos.filter((repo) => repo.status === 'built').length;
const erroredCount = visibleRepos.filter((repo) => repo.status === 'errored').length;
const unreachableCount = visibleRepos.filter((repo) => repo.reachable === false).length;
const erroredRepos = visibleRepos.filter((repo) => repo.status === 'errored');
const recentlyChangedCount = visibleRepos.filter((repo) => {
  if (!repo.updatedAt || !Number.isFinite(Date.parse(repo.updatedAt))) return false;
  const ageMs = Date.now() - Date.parse(repo.updatedAt);
  return ageMs <= 7 * 24 * 60 * 60 * 1000;
}).length;

const featuredRepos = visibleRepos
  .filter((repo) => repo.featured)
  .sort((a, b) => b.priority - a.priority || a.fullName.localeCompare(b.fullName))
  .slice(0, 12);

const ownerOrder = new Map(directory.owners.map((owner, index) => [owner.toLowerCase(), index]));
const grouped = new Map<string, PagesRepo[]>();

for (const repo of visibleRepos) {
  if (!grouped.has(repo.owner)) grouped.set(repo.owner, []);
  grouped.get(repo.owner)?.push(repo);
}

for (const [owner, repos] of grouped) {
  grouped.set(
    owner,
    repos.sort(
      (a, b) =>
        Number(b.featured) - Number(a.featured) ||
        b.priority - a.priority ||
        a.repo.localeCompare(b.repo, undefined, { sensitivity: 'base' })
    )
  );
}

const groups = Array.from(grouped.entries()).sort((a, b) => {
  const aIdx = ownerOrder.get(a[0].toLowerCase());
  const bIdx = ownerOrder.get(b[0].toLowerCase());
  if (aIdx !== undefined && bIdx !== undefined) return aIdx - bIdx;
  if (aIdx !== undefined) return -1;
  if (bIdx !== undefined) return 1;
  return a[0].localeCompare(b[0], undefined, { sensitivity: 'base' });
});
---

<Layout title="Static Fleet — Site Reliability" description="A unified index of live GitHub Pages deployments with health telemetry and architectural curation across 91 repositories.">
  <section class="section">
    <div class="container">
      <h1 class="page-title">Static Fleet</h1>
      <p class="page-sub">
        Real-time reliability monitoring for the system's static surface area. Unified health telemetry, build verification, and machine-readable feeds.
      </p>

      <div class="summary-grid">
        <div class="summary-card">
          <span class="summary-label">Visible Repos</span>
          <strong class="summary-value">{visibleRepos.length}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Owners Indexed</span>
          <strong class="summary-value">{directory.owners.length}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Built</span>
          <strong class="summary-value">{builtCount}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Errored</span>
          <strong class="summary-value">{erroredCount}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Unreachable</span>
          <strong class="summary-value">{unreachableCount}</strong>
        </div>
        <div class="summary-card">
          <span class="summary-label">Updated (7d)</span>
          <strong class="summary-value">{recentlyChangedCount}</strong>
        </div>
      </div>

      <section class="health-card">
        <h2>System Pages Health</h2>
        <p>
          Last sync: <strong>{generatedLabel}</strong>
          {ageHours !== null && ` · age ${ageHours.toFixed(2)}h`}
          {isStale ? ' · stale (>48h)' : ' · fresh'}
        </p>
        <div class="feed-links">
          <a href={`${base}github-pages.json`}>JSON endpoint</a>
          <a href={`${base}github-pages.xml`}>RSS/Atom feed</a>
        </div>
      </section>

      <section class="diagnostics-card">
        <h2>Why this matters</h2>
        <p>
          This index acts as a deploy-time reliability gate for live sites across all tracked owners.
          Keep this panel fresh to catch Pages regressions before they ship.
        </p>
        {erroredRepos.length > 0 && (
          <>
            <p class="diagnostics-label">
              Actionable diagnostics: {erroredRepos.length} repo{erroredRepos.length === 1 ? '' : 's'} currently report <code>status=errored</code>.
            </p>
            <ul class="diagnostics-list">
              {erroredRepos.map((repo) => (
                <li>
                  <a href={repo.repoUrl} target="_blank" rel="noopener noreferrer">{repo.fullName}</a>
                  {' · '}
                  <a href={repo.pageUrl} target="_blank" rel="noopener noreferrer">open page</a>
                </li>
              ))}
            </ul>
          </>
        )}
      </section>

      {featuredRepos.length > 0 && (
        <section class="featured-group" aria-labelledby="featured-pages">
          <div class="owner-group__head">
            <h2 id="featured-pages">Featured</h2>
            <span>{featuredRepos.length} highlighted</span>
          </div>
          <ul class="repo-list">
            {featuredRepos.map((repo) => (
              <li class="repo-item">
                <div class="repo-main">
                  <a
                    class="repo-link"
                    href={repo.pageUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    data-gh-pages-track
                    data-track-surface="directory-featured"
                    data-track-owner={repo.owner}
                    data-track-repo={repo.repo}
                    data-track-target="page">
                    {repo.label ?? repo.fullName}
                  </a>
                  <a
                    class="repo-secondary"
                    href={repo.repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    data-gh-pages-track
                    data-track-surface="directory-featured"
                    data-track-owner={repo.owner}
                    data-track-repo={repo.repo}
                    data-track-target="repo">
                    View repository
                  </a>
                </div>
                <div class="repo-meta">
                  <span class="meta-pill">priority: {repo.priority}</span>
                  {repo.status && <span class="meta-pill">status: {repo.status}</span>}
                  {repo.probeMethod && <span class="meta-pill">probe: {repo.probeMethod}</span>}
                  {repo.probeLatencyMs !== null && repo.probeLatencyMs !== undefined && (
                    <span class="meta-pill">latency: {repo.probeLatencyMs}ms</span>
                  )}
                  {repo.httpStatus !== null && (
                    <span class:list={['meta-pill', { 'meta-pill--bad': !repo.reachable }]}>
                      http: {repo.httpStatus}
                    </span>
                  )}
                  {repo.lastError && <span class="meta-pill meta-pill--bad">probe-error</span>}
                </div>
              </li>
            ))}
          </ul>
        </section>
      )}

      <div class="groups">
        {groups.map(([owner, repos]) => (
          <section class="owner-group" aria-labelledby={`owner-${owner}`}>
            <div class="owner-group__head">
              <h2 id={`owner-${owner}`}>{owner}</h2>
              <span>{repos.length} repo{repos.length !== 1 ? 's' : ''}</span>
            </div>
            <ul class="repo-list">
              {repos.map((repo) => (
                <li class="repo-item">
                  <div class="repo-main">
                    <a
                      class="repo-link"
                      href={repo.pageUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      data-gh-pages-track
                      data-track-surface="directory-owner"
                      data-track-owner={repo.owner}
                      data-track-repo={repo.repo}
                      data-track-target="page">
                      {repo.label ?? repo.fullName}
                    </a>
                    <a
                      class="repo-secondary"
                      href={repo.repoUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      data-gh-pages-track
                      data-track-surface="directory-owner"
                      data-track-owner={repo.owner}
                      data-track-repo={repo.repo}
                      data-track-target="repo">
                      View repository
                    </a>
                  </div>
                  <div class="repo-meta">
                    {repo.featured && <span class="meta-pill">featured</span>}
                    {repo.status && (
                      <span class:list={['meta-pill', { 'meta-pill--bad': repo.status === 'errored' }]}>
                        status: {repo.status}
                      </span>
                    )}
                    {repo.buildType && <span class="meta-pill">build: {repo.buildType}</span>}
                    {repo.cname && <span class="meta-pill">cname: {repo.cname}</span>}
                    {repo.sourceBranch && (
                      <span class="meta-pill">
                        source: {repo.sourceBranch}
                        {repo.sourcePath && repo.sourcePath !== '/' ? `:${repo.sourcePath}` : ''}
                      </span>
                    )}
                    {repo.httpStatus !== null && (
                      <span class:list={['meta-pill', { 'meta-pill--bad': !repo.reachable }]}>
                        http: {repo.httpStatus}
                      </span>
                    )}
                    {repo.probeMethod && <span class="meta-pill">probe: {repo.probeMethod}</span>}
                    {repo.probeLatencyMs !== null && repo.probeLatencyMs !== undefined && (
                      <span class="meta-pill">latency: {repo.probeLatencyMs}ms</span>
                    )}
                    {repo.redirectTarget && <span class="meta-pill">redirected</span>}
                    {repo.lastError && <span class="meta-pill meta-pill--bad">probe-error</span>}
                    {repo.updatedAt && <span class="meta-pill">updated: {new Date(repo.updatedAt).toISOString().slice(0, 10)}</span>}
                  </div>
                </li>
              ))}
            </ul>
          </section>
        ))}
      </div>
    </div>
  </section>
  <GithubPagesTracking />
</Layout>

<style>
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    gap: var(--space-md);
    margin: var(--space-xl) 0 var(--space-lg);
  }

  .summary-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .summary-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
  }

  .summary-value {
    font-size: 1.35rem;
    color: var(--text-primary);
  }

  .health-card {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-lg);
    margin-bottom: var(--space-xl);
    background: var(--bg-card);
  }

  .health-card h2 {
    margin: 0 0 var(--space-sm);
    font-size: 1rem;
  }

  .health-card p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.92rem;
  }

  .diagnostics-card {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--space-lg);
    margin-bottom: var(--space-xl);
    background: var(--bg-card);
  }

  .diagnostics-card h2 {
    margin: 0 0 var(--space-sm);
    font-size: 1rem;
  }

  .diagnostics-card p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.92rem;
  }

  .diagnostics-label {
    margin-top: var(--space-md) !important;
  }

  .diagnostics-list {
    margin: var(--space-sm) 0 0;
    padding-left: 1.1rem;
    display: grid;
    gap: 0.2rem;
    font-size: 0.86rem;
  }

  .feed-links {
    margin-top: var(--space-sm);
    display: flex;
    gap: var(--space-md);
  }

  .feed-links a {
    font-size: 0.84rem;
    color: var(--accent-text);
  }

  .featured-group {
    margin-bottom: var(--space-xl);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    background: var(--bg-card);
  }

  .groups {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .owner-group {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    background: var(--bg-card);
    overflow: hidden;
  }

  .owner-group__head {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
    background: rgba(var(--spectrum-current, 212, 168, 83), 0.08);
  }

  .owner-group__head h2 {
    margin: 0;
    font-size: 1.03rem;
  }

  .owner-group__head span {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .repo-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .repo-item {
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .repo-item:last-child {
    border-bottom: 0;
  }

  .repo-main {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-md);
  }

  .repo-link {
    font-weight: 600;
    color: var(--text-primary);
  }

  .repo-link:hover {
    color: var(--accent-text);
  }

  .repo-secondary {
    font-size: 0.84rem;
    color: var(--text-muted);
  }

  .repo-secondary:hover {
    color: var(--text-secondary);
  }

  .repo-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-sm);
  }

  .meta-pill {
    display: inline-block;
    font-size: 0.72rem;
    letter-spacing: 0.03em;
    border: 1px solid var(--border);
    border-radius: 999px;
    padding: 0.15rem 0.55rem;
    color: var(--text-muted);
    background: rgba(255, 255, 255, 0.03);
  }

  .meta-pill--bad {
    border-color: #b00020;
    color: #b00020;
  }

  @media (max-width: 1080px) {
    .summary-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 900px) {
    .summary-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
