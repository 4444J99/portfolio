        </div>
      </div>
    </section>
</Layout>

<IndexFilters />

<style>
  .section__heading {
    margin-bottom: var(--space-2xl);
  }

  .contact__text {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: var(--space-xl);
    max-width: 50ch;
  }

  .contact__links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }

  .contact__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.95rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact__link:hover {
    color: var(--accent-text);
  }
</style>
