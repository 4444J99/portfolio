---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import SketchContainer from '../components/sketches/SketchContainer.astro';
import essayData from '../data/essays.json';

const essayTitles = (essayData as any).essays.slice(0, 12).map((e: any) => e.title);
---

<Layout title="Essays — Public Process" description="28 essays on building an eight-organ creative-institutional system in public.">
  <Header />
  <main id="main-content">
    <div class="sketch-accent">
      <SketchContainer sketchId="token-stream" height="250px" mobileHeight="180px" ariaLabel="Animated token stream representing text and language flow" data-tokens={essayTitles.join('|')} />
    </div>
    <section class="section">
      <div class="container">
        <h1 class="page-title">Public Process Essays</h1>
        <p class="page-sub">
          {essayData.total} essays documenting architectural decisions, sprint narratives, and methodology
          — transparency as design choice, process documentation as portfolio evidence.
        </p>
        <p class="page-feed">
          <a href={essayData.feed_url} target="_blank" rel="noopener">RSS Feed</a>
          &middot;
          <a href={essayData.site_url} target="_blank" rel="noopener">Full site</a>
        </p>

        <div class="essay-list">
          {essayData.essays.map((essay: any) => (
            <a href={essay.url} target="_blank" rel="noopener" class="essay-entry">
              <time class="essay-entry__date" datetime={essay.date}>{essay.date}</time>
              <span class="essay-entry__title">{essay.title}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .page-title {
    margin-bottom: var(--space-sm);
  }

  .page-sub {
    margin-bottom: var(--space-sm);
  }

  .page-feed {
    font-size: 0.85rem;
    margin-bottom: var(--space-2xl);
  }

  .essay-list {
    display: flex;
    flex-direction: column;
  }

  .essay-entry {
    display: flex;
    align-items: baseline;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border);
    text-decoration: none;
    transition: background var(--transition-fast);
  }

  .essay-entry:hover {
    background: var(--bg-card);
  }

  .essay-entry__date {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-muted);
    flex-shrink: 0;
    min-width: 7em;
  }

  .essay-entry__title {
    font-size: 1rem;
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .essay-entry:hover .essay-entry__title {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .essay-entry {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
</style>
