---
import Layout from '../layouts/Layout.astro';
import PersonaCard from '../components/resume/PersonaCard.astro';
import { personas } from '../data/personas.json';
import { base } from '../utils/paths';
import SketchContainer from '../components/sketches/SketchContainer.astro';
---

<Layout 
  title="Choose Your Entry Point â€” Resume" 
  description="Anthony James Padavano: Polymath, Architect, and Engineer. Select a specialized persona to view technical outcomes and market-aligned evidence."
  keywords={["Resume", "CV", "AI Architect", "Systems Architect", "Creative Technologist", "Technical PM", "Polymath"]}
>
  <div class="resume-gateway">
    <div class="container container--narrow">
      <header class="gateway-header" data-reveal>
        <h1 class="page-title">I am a Polymath.</h1>
        <p class="gateway-intro">
          My work spans engineering, theory, and art. Built upon a <a href={`${base}philosophy/`}>Logocentric Architecture</a>, I've engineered specific "masks" that translate my high-dimensional body of work into market-legible signals.
        </p>
        <p class="gateway-prompt">Select a specialized mask to view my evidence:</p>
      </header>

      <div class="gateway-grid">
        {personas.map((persona, index) => (
          <div style={`--stagger-index: ${index + 1}`}>
            <PersonaCard persona={persona} />
          </div>
        ))}
      </div>

      <footer class="gateway-footer" data-reveal style="--stagger-index: 5">
        <p>Looking for the full, unfiltered complexity?</p>
        <a href={`${base}resume/polymath/`} class="visionary-link">
          View Visionary Polymath Resume
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>
        </a>
      </footer>
    </div>
  </div>
</Layout>

<style>
  .resume-gateway {
    padding: var(--space-3xl) 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .gateway-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .gateway-intro {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: var(--space-md) auto;
    line-height: 1.6;
  }

  .gateway-prompt {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--accent);
    font-weight: 600;
    margin-top: var(--space-xl);
  }

  .gateway-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-4xl);
  }

  .gateway-footer {
    text-align: center;
    padding: var(--space-2xl);
    border-top: 1px solid var(--border);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
  }

  .gateway-footer p {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--space-md);
    max-width: none;
  }

  .visionary-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-primary);
    font-weight: 600;
    text-decoration: none;
    padding: var(--space-sm) var(--space-xl);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .visionary-link:hover {
    border-color: var(--accent);
    background: var(--bg-card);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .gateway-grid {
      grid-template-columns: 1fr;
    }
    
    .resume-gateway {
      padding: var(--space-xl) 0;
    }
  }
</style>
