<style>
  .resume {
    padding: var(--space-3xl) 0;
  }

  .resume__header {
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .resume__header h1 {
    margin-bottom: var(--space-xs);
  }

  .resume__title {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: var(--space-md);
  }

  .resume__contact {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .resume__contact a {
    font-size: 0.85rem;
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .resume__contact a:hover {
    color: var(--accent);
  }

  .resume__sep {
    color: var(--border);
    font-size: 0.8rem;
  }

  .resume__section {
    margin-bottom: var(--space-md);
  }

  .resume__section h2 {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
  }

  .resume__skills {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-lg);
  }

  .resume__skill-group h3 {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .resume__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .resume__project {
    margin-bottom: var(--space-xl);
  }

  .resume__project h3 {
    margin-bottom: 0;
  }

  .resume__project-sub {
    font-size: 0.85rem;
    color: var(--text-muted);
    font-style: italic;
    margin-bottom: var(--space-sm);
  }

  .resume__entry {
    margin-bottom: var(--space-xl);
  }

  .resume__entry h3 {
    margin-bottom: 0;
  }

  .resume__date {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
  }

  .resume__links {
    list-style: none;
    padding: 0;
  }

  .resume__links li {
    margin-bottom: var(--space-sm);
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .resume__location {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .resume__certs {
    list-style: none;
    padding: 0;
  }

  .resume__certs li {
    margin-bottom: var(--space-sm);
    color: var(--text-secondary);
  }

  .resume__date-inline {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-left: var(--space-sm);
  }

  /* --- Print Styles --- */
  @media print {
    :global(body) {
      background: white;
      color: #111;
      font-size: 11pt;
      line-height: 1.5;
    }

    :global(.header),
    :global(.footer) {
      display: none;
    }

    :global(hr) {
      border-color: #ddd;
    }

    :global(a) {
      color: #111;
      text-decoration: none;
    }

    :global(a[href^="http"])::after,
    :global(a[href^="mailto"])::after {
      content: " (" attr(href) ")";
      font-size: 0.75em;
      color: #666;
      word-break: break-all;
    }

    :global(.tag) {
      background: #f0f0f0;
      color: #333;
      border: 1px solid #ddd;
    }

    :global(h1, h2, h3, h4) {
      color: #111;
    }

    :global(p) {
      color: #333;
    }

    :global(li) {
      color: #333;
    }

    .resume {
      padding: 0;
    }

    .resume__title {
      color: #555;
    }

    .resume__contact a {
      color: #333;
    }

    .resume__sep {
      color: #999;
    }

    .resume__section h2 {
      color: #555;
    }

    .resume__skill-group h3 {
      color: #555;
    }

    .resume__project-sub,
    .resume__date {
      color: #666;
    }

    .resume__links li {
      color: #333;
    }

    .resume__location {
      color: #333;
    }

    .resume__certs li {
      color: #333;
    }

    .resume__date-inline {
      color: #666;
    }

    @page {
      margin: 1cm;
    }
  }
</style>
